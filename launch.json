{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/dist/index.js", // 编译后的 JS 入口文件
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js" // 编译后的 JS 文件路径
        ],
        "sourceMaps": true // 启用 Source Maps
      }
    ]
  }