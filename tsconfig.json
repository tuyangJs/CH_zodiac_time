{
  "compilerOptions": {
    "module": "ESNext", // 或 "ESModule"
    "target": "ESNext", // 或 "ES6"
    "incremental": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}